#include <TELEOP.h>   
#include <PRIZM.h>    

PRIZM prizm;          
PS4 ps4;        
  \

int ms = 40; 

void setup() {
  prizm.PrizmBegin();
  prizm.setMotorInvert(2,1);            
  ps4.setDeadZone (LEFT,10);     
  ps4.setDeadZone(RIGHT,10); 
}



void loop(){
  ps4.getPS4();
  if(ps4.Connected){
    
    int motor1 = ps4.Motor(LY);
    int motor2 = ps4.Motor(RY);
    
  prizm.setMotorPowers(motor1,motor2);
  }
}

