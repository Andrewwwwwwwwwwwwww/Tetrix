//  }
//}

bool connection(){
  if (ps4.Connected){
    return true;
  } else {
    return false;
  }
}

void RT(){
  prizm.setMotorPowers(ms*1.25,ms);
}

void LT(){
  prizm.setMotorPowers(ms,ms*1.25);
}

void Forward(){
  prizm.setMotorPowers(ms,ms);
}

void Backward(){
  prizm.setMotorPowers(-ms,-ms);
}

void Stop(){
  prizm.setMotorPowers(0,0);
}
